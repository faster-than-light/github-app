{
  "name": "github-app",
  "version": "0.1.1",
  "description": "Faster Than Light Static Analysis and GitHub Continuous Integration",
  "author": "Reuven Etzion <retzion@gmail.com>",
  "license": "GPL-2.0",
  "repository": "https://github.com/faster-than-light/github-app.git",
  "homepage": "https://github.com/faster-than-light/github-app",
  "bugs": "https://github.com/faster-than-light/github-app/issues",
  "keywords": [
    "bugcatcher",
    "github workflow",
    "static analysis",
    "continous integration"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "jest": "jest",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "node-bugcatcher": "^1.0.26",
    "probot": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^24.0.0",
    "nock": "^11.6.0",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^12.0.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
